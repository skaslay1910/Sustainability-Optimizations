GOOGLE_GENAI_USE_VERTEXAI=TRUE
GOOGLE_CLOUD_PROJECT=hacker2025-team-49-dev
PROJECT_ID=hacker2025-team-49-dev
GOOGLE_CLOUD_LOCATION=us-central1
STAGING_BUCKET=staging.hacker2025-team-49-dev.appspot.com
BUCKET_NAME=hacker2025-team-49-dev.appspot.com
MODEL=gemini-2.0-flash

#Configuration: API KEYS & ENDPOINTS
API_CONFIG = {
    "EcoVadis":{
        "url": "https://api.ecovadis.com/suppliers/{supplier_id}/scorecard",
        "headers": {
            "Authorization":"Bearer {token}"
        },
        "normalize": lambda score: score # Already 0-100
    },
    "Sustainalytics":{
        "url":"https://api.sustainalytics.com/esg-score?supplier_id={supplier_id}",
        "headers": {
            "Authorization":"Bearer {token}"
        },
        "normalize": lambda score: max(0,100-score)
    },
    "MSCI":{
        "url":"https://api.msci.com/supplier/{supplier_id}/rating",
        "headers": {
            "Authorization":"Bearer {token}"
        },
        "normalize": lambda grade:{
            "AAA":100,"AA": 90, "A": 80,
            "BBB":70, "BB":60, "B":40,
            "CCC":20
        }.get(grade.upper(), 0)
    }
    
}